
<div style="margin-top: 100px;">
  <% @categories.each do |category| %>

    <div style="margin-top: 30px;margin-left: 100px;margin-bottom: 30px;">
      <div><%= category.name %></div>
      <%= link_to "category", category_path(category), class: "btn btn-success" %>
      <%= link_to "edit category", edit_category_path(category), class: "btn btn-success" %>
    </div>

  <% end %>

  <div style="margin-top: 30px;margin-left: 100px;margin-bottom: 30px;">
      <%= link_to "new category", new_category_path, class: "btn btn-success" %>
  </div>

</div>


