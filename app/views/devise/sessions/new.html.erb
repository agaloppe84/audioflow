
  <div class="form-paddings" style="font-family: 'Circular-Book'";>

    <div class="form-header" style="color: <%= rand_font_color %>;">CONNEXION</div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-flex-container">
          <div class="form-flex-icon"><i class="fa fa-headphones" aria-hidden="true"></i></div>
          <%= f.input :email, label: false, autofocus: true, placeholder: 'email' %>
        </div>

        <div class="form-flex-container">
          <div class="form-flex-icon"><i class="fa fa-headphones" aria-hidden="true"></i></div>
          <%= f.input :password, label: false, placeholder: 'password' %>
        </div>

        <%= f.submit "connexion", class: "full-submit-button" %>


    <% end %>

    <%= render "devise/shared/links" %>

</div>
