

<div style="margin-top: 50px;margin-left: 100px;">
  <div>Gem of the day</div>
</div>

<div style="margin-top: 20px;margin-left: 100px;">
    <div><%= @track.name %></div>
    <div><%= @track.artist %></div>
    <div><%= @track.playable_at %></div>
    <%= link_to "track", track_path(@track), class: "btn btn-success" %>
</div>

<div style="margin-top: 100px;">
  <% @tracks.each do |track| %>

    <div style="margin-top: 30px;margin-left: 100px;margin-bottom: 30px;">
      <div><%= track.name %></div>
      <div><%= track.artist %></div>
      <div><%= "Play day = #{track.playable_at}" %></div>
      <%= link_to "track", track_path(track), class: "btn btn-success" %>
      <%= link_to "edit track", edit_track_path(track), class: "btn btn-success" %>
    </div>



  <% end %>
</div>


